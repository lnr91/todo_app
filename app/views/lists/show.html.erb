<%= content_for :title, @list.name %>
<h2><%= @list.name %> </h2>
<p> <%= @list.description %></p>
<h3>Unfinished Tasks</h3>
<ul>
  <% @list.tasks.incomplete.each do |task| %>
      <li><%= task.description %><%=button_to "Complete", complete_task_path(@list,task) %></li>
  <% end %></ul>
<h3>Completed Tasks</h3>
<ul>
  <% @list.tasks.completed.each do |task| %>
      <li><%= task.description %></li>
  <% end %></ul>
<%= render 'tasks/task_form' %>
<p><%= link_to "All lists", controller: :pages, action: :home %></p>